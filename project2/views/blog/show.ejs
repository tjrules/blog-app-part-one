<h1><%= blog.title %></h1>
<p><%= blog.content %></p>


<% if (author) { %>
<h4>Written By: <%= author.name %> </h4>

<% } %>

<a href="/blog">Back to your blog</a>
<a href="<%= `/blog/${blog.id}/edit` %>">Edit</a>

<form action="<%= `/blog/${blog.id}?_method=DELETE` %>" method="POST">
  <input type="submit" value="Delete" />
</form>
