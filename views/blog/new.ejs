<% include ../partials/head.ejs %>
<% include ../partials/nav.ejs %>
<div class="container">
  <h2>Create New Post</h2>
  <form class="form-horizontal" action="/blog" method="POST">
    <div class="form-group">
      <label class="control-label col-sm-2" for="title">Title:</label>
      <div class="col-sm-10">
        <input type="title" class="form-control" id="title" placeholder="Title" name="title">
      </div>
    </div>
    <div class="form-group">
      <label class="control-label col-sm-2" for="content">Content:</label>
      <div class="col-sm-10">
   <textarea type="content" rows="10" class="form-control" id="content" placeholder="Write your new post here" name="content" class="form-control"  id="content"></textarea>
      </div>
    </div>
    <div class="form-group">
      <label class="control-label col-sm-2" for="author_id">Author:</label>
      <div class="col-sm-10">
        <select id="author_id" name="author_id">
          <% author.forEach(author => { %>
            <option value="<%= author.id %>">
              <%= author.name %>
            </option>
          <% }) %>
        </select>
      </div>
    </div>
    <div class="form-group">
      <label class="control-label col-sm-2" for="photo_id">Photo:</label>
      <div class="col-sm-10">
        <select id="photo_id" name="photo_id">
          <% photo.forEach(photo => { %>
            <option value="<%= photo.id %>">
              <%= photo.keyword %>
            </option>
          <% }) %>
        </select>
      </div>
    </div>
    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
        <button type="submit" class="btn btn-default">Submit</button>
          <button  class="btn btn-default"><a href="/blog">Cancel</a></button>
      </div>
    </div>
  </form>
</div>


<% include ../partials/end.ejs %>
