<% include ../partials/head.ejs %>
<% include ../partials/nav.ejs %>
<h1>Edit blog post</h1>


<form action="<%= `/blog/${blog.id}?_method=PUT` %>" method="POST">
  <label for="title">Title</label>
  <input id="title" type="text" name="title" value="<%= blog.title %>" />

  <br />

  <label for="content">content</label>
  <input id="content" type="text" name="content" value="<%= blog.content %>" />

  <br />

  <label for="photo_id">photo</label>
   <select name="photo_id" id="photo_id">
     <% photo.forEach(photo => { %>
    <option
      value="<%= photo.id %>"
      selected="<%= blog.photo_id == photo.id %>">
      <%= `${photo.keyword}` %>
    </option>
     <% }) %>
   </select>

  <br />

  <label for="author_id">author</label>
   <select name="author_id" id="author_id">
     <% author.forEach(author => { %>
    <option
      value="<%= author.id %>"
      selected="<%= blog.author_id == author.id %>">
      <%= `${author.name}` %>
    </option>
     <% }) %>
   </select>

  <input type="submit" value="Save changes" />
</form>

<a href="<%= `/blog/${blog.id}` %>">Cancel</a>
<% include ../partials/end.ejs %>
